<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#AAFF47"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student_info">


    // student info


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Info"
            android:textSize="38sp"
            android:padding="22sp"/>
    </LinearLayout>


    // Name textview and edittext
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="28sp" />
        <EditText
            android:id="@+id/Fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name "
            android:textSize="28sp"/>

    </LinearLayout>


    // ID textview and edittext


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:layout_margin="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textSize="28sp" />
        <EditText
            android:id="@+id/Sid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Id"
            android:textSize="28sp"/>

    </LinearLayout>


    // Spinner Section


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sec :"
            android:textSize="28sp" />


        // Spinner button


        <Spinner
            android:id="@+id/spn"
            android:layout_width="match_parent"
            android:layout_height="39dp"/>
    </LinearLayout>

    // Email
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="28sp" />
        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Email "
            android:textSize="28sp"/>

    </LinearLayout>

    // Gender Text box

    <TextView
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Gender:"
        android:textSize="28sp" />


    // Radio Group


    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">
        <RadioButton
            android:id="@+id/rButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="62dp"
            android:text="Male"
            android:textSize="22sp"/>
        <RadioButton
            android:id="@+id/rButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="22sp"/>

    </RadioGroup>


    // Multiple Value Insert An intent is an abstract description of an operation to be performed.

    <Button
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:layout_gravity="center"
        android:onClick="insertMul"
        android:layout_marginBottom="22sp"
        android:textSize="22dp"/>




    // button Submit for normal intent show


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Info"
        android:layout_gravity="center"
        android:onClick="View_Info"
        android:textSize="22dp"/>


</LinearLayout>